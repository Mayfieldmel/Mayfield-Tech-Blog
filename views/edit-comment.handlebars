{{#if loggedIn}}
{{!-- edit comment form --}}
<article class="item">
  <div class="title form">
    <h2>Edit comment</h2>
  </div>
  <form id="edit-comment-form" class="content">
    <div>
      <textarea name="comment-text" type="text" class="text-box">{{comment.comment_text}}"</textarea>
    </div>
    <button type="submit" class="btn long">Save comment</button>
    <button type="button" id="delete-comment-btn" class="btn long">Delete comment</button>
  </form>
</article>

<script src="/javascript/edit-comment.js"></script>
<script src="/javascript/delete-comment.js"></script>
{{/if}}