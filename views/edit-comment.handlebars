{{#if loggedIn}}
{{!-- edit comment form --}}
<article>
  <h2>
    Edit comment
  </h2>
  <form id="edit-comment-form">
    <div>
      <textarea name="comment-text" type="text" placeholder="{{comment.comment_text}}"></textarea>
    </div>
    <button type="submit">Save comment</button>
    <button type="button" id="delete-comment-btn">Delete comment</button>
  </form>
</article>
{{else}}
{{> login-form}}
{{/if}}

{{#if loggedIn}}
<script src="/javascript/edit-comment.js"></script>
<script src="/javascript/delete-comment.js"></script>
{{/if}}