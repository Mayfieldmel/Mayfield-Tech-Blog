<ul>
  {{!-- display list of posts --}}
  {{#each posts as |post|}}
  <li class="post-list">
    {{!-- display single post --}}
    <article>
      <div class="post-title">
        <a href="/post/{{id}}">{{title}}</a>
        posted on {{format_date created_at}}
      </div>
      <div "post-content">
        <p>{{post_content}}</p>
      </div>
    </article>
  </li>
  {{/each}}
</ul>