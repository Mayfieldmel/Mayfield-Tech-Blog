{{!-- list of user posts --}}
<h1>DASHBOARD</h1>
<div>
    <a href="/dashboard/add-post">Create a Post</a>
</div>
{{#if posts.length}}
<section>
  <h2>Your Posts</h2>
  <ol>
    {{#each posts as |post|}}
    <li>
      {{> post}}
      <a href="/dashboard/edit/{{post.id}}">Edit post</a>
    </li>
    {{/each}}
  </ol>
</section>
{{/if}}
<section>
  <a href="/dashboard/comments/"><h3> Click here to view your comments</h3></a>
</section>
